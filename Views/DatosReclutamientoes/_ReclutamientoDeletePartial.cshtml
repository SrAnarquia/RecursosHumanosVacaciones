@using RecursosHumanos.Models.ViewModels.Reclutamiento
@model ReclutamientoDeleteVM

<div class="reclutamiento-overlay"
     id="reclutamientoOverlayDelete"
     style="display:@(Model.MostrarModal ? "flex" : "none")">

    <div class="reclutamiento-modal">

        <!-- HEADER -->
        <div class="modal-header">
            <h5>Confirmar eliminación</h5>
            <button type="button"
                    class="btn-close"
                    onclick="ReclutamientoOverlayDelete.close()">
            </button>
        </div>

        <!-- BODY -->
        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Datos.Id" />

            <div class="modal-body">

                <p class="mb-3">
                    ¿Estás seguro de que deseas eliminar el siguiente registro?
                </p>

                <div class="row g-3">

                    <div class="col-md-12">
                        <label class="form-label">Nombre</label>
                        <input class="form-control"
                               value="@Model.Datos.NombreCompleto"
                               disabled />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Teléfono</label>
                        <input class="form-control"
                               value="@Model.Datos.Telefono"
                               disabled />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Fecha de contacto</label>
                        <input class="form-control"
                               value="@Model.Datos.FechaContacto.ToString("dd/MM/yyyy")"
                               disabled />
                    </div>

                </div>
            </div>

            <!-- FOOTER -->
            <div class="modal-footer mt-4">
                <button type="button"
                        class="btn btn-secondary"
                        onclick="ReclutamientoOverlayDelete.close()">
                    Cancelar
                </button>

                <button type="submit"
                        class="btn btn-danger">
                    Eliminar
                </button>
            </div>

        </form>

    </div>
</div>
