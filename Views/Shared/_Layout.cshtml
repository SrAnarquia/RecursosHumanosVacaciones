<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Gestión de Personal</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- CSS Principal -->
    <link href="~/css/_Layout.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <div class="app-container">

        <!-- SIDEBAR -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <button class="btn-toggle" id="btnToggle">
                    <i class="bi bi-list"></i>
                </button>
            </div>
            <nav class="sidebar-menu">

                <!-- HOME -->
                <a asp-controller="Home" asp-action="Index" class="menu-item">
                    <i class="bi bi-house"></i>
                    <span>Home</span>
                </a>

                <!-- EMPLEADOS -->
                <div class="menu-group">
                    <button class="menu-item menu-toggle">
                        <i class="bi bi-people"></i>
                        <span>Empleados</span>
                        <i class="bi bi-chevron-down arrow"></i>
                    </button>
                    <ul class="submenu">
                        <li><a asp-controller="Empleados" asp-action="Index">Visualizar</a></li>
                        <li><a asp-controller="Alertas" asp-action="Index">Alertas</a></li>
                        <li><a asp-controller="Empleados" asp-action="Estadisticas">Estadísticas</a></li>
                    </ul>
                </div>

                <!-- RECLUTAMIENTO -->
                <div class="menu-group">
                    <button class="menu-item menu-toggle">
                        <i class="bi bi-clipboard-check"></i>
                        <span>Reclutamiento</span>
                        <i class="bi bi-chevron-down arrow"></i>
                    </button>
                    <ul class="submenu">
                        <li><a asp-controller="DatosReclutamientoes" asp-action="Index">Reclutar</a></li>
                        <li><a asp-controller="EstadisticasReclutamiento" asp-action="Index">Estadísticas</a></li>
                    </ul>
                </div>

                <!-- VACACIONES -->
                <div class="menu-group">
                    <button class="menu-item menu-toggle">
                        <i class="bi bi-sun"></i>
                        <span>Vacaciones</span>
                        <i class="bi bi-chevron-down arrow"></i>
                    </button>
                    <ul class="submenu">
                        <li><a asp-controller="Vacacions" asp-action="Index">Solicitud</a></li>
                        <li><a asp-controller="Vacacions" asp-action="Aprobaciones">Aprobaciones</a></li>
                    </ul>
                </div>

                <!-- ENTRENAMIENTO -->
                <div class="menu-group">
                    <button class="menu-item menu-toggle">
                        <i class="bi bi-mortarboard"></i>
                        <span>Entrenamiento</span>
                        <i class="bi bi-chevron-down arrow"></i>
                    </button>
                    <ul class="submenu">
                        <li><a asp-controller="Entrenamiento" asp-action="Create">Cursos</a></li>
                        <li><a asp-controller="Entrenamiento" asp-action="Cursos">Aprendizaje</a></li>
                    </ul>
                </div>

               

            </nav>

        </aside>

        <!-- MAIN -->
        <div class="main-content" id="mainContent">

            <!-- TOPBAR -->
            <header class="topbar">
                <div class="topbar-title">
                    <h6>Gestión de personal</h6>
                </div>

                <div class="topbar-actions">
                    <form asp-controller="Cuenta" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </header>

            <!-- CONTENIDO -->
            <main class="content">
                @RenderBody()
            </main>

        </div>
    </div>

    @RenderSection("Scripts", required: false)

    <script src="~/js/_Layout.js"></script>

</body>
</html>
